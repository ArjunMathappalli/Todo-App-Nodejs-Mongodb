<%- include("./partials/header.ejs") %>

<!-- As a link -->
<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">TODO</a>
    </div>
  </nav>
<div class="container mt-5" >
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" id="" class="form-control" placeholder="Enter your list">
        <input type="submit" value="Add Todo" class="btn btn-md btn-danger mx-2">
    </form>
    <ul class="list-group mt-5">
        <% todo.forEach(todos => {%>
            <li class="list-group-item"><%= todos.todo %>
                <a href="/delete/todo/<%= todos._id %>" class="btn btn-primary">Delete</a>
            </li>
            
        <%}) %>
        
      </ul>
</div>  


